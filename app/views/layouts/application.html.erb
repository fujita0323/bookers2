<!DOCTYPE html>
<html>
  <head>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<script src="https://kit.fontawesome.com/927e8d9818.js" crossorigin="anonymous"></script>

    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
                <h1><%= link_to "Bookers", root_path %></h1>

       <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to 'Home', user_path(current_user.id), class: 'nav-link text-dark fas fa-home' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Users', users_path, class: 'nav-link text-dark fas fa-users' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Books', books_path, class: 'nav-link text-dark fas fa-book-open' %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-dark fas fa-sign-out-alt' %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to 'Home', root_path, class: 'nav-link text-dark fas fa-home' %>
      </li>
      <li class="nav-item">
        <%= link_to 'About', about_path, class: 'nav-link text-dark fas fa-link' %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-dark fas fa-user-plus' %>
      </li>
      <li class="nav-item">
        <%= link_to "Log in", new_user_session_path, class: 'nav-link text-dark fas fa-sign-in-alt' %>
      </li>
    <% end %>
    </ul>
    </div>
    </div>
    </nav>
    </header>
    <%= yield %>
  </body>
</html>

